{
  "name": "telegram-bot-server",
  "version": "1.0.0",
  "description": "Telegram bot server for task notifications",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:docker": "concurrently \"npm run start\" \"npm run health-monitor\"",
    "health-monitor": "node -e \"setInterval(() => console.log('ðŸ¤– Bot health check:', new Date().toISOString()), 30000)\"",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "test": "echo 'No tests specified' && exit 0"
  },
  "keywords": [
    "telegram",
    "bot",
    "notifications",
    "tasks",
    "supabase"
  ],
  "author": "Your Name",
  "license": "MIT",
