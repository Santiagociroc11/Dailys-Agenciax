{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "outDir": "dist/server",
    "rootDir": ".",
    "types": ["node"],
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["server.ts", "api/**/*.ts", "lib/**/*.ts", "models/**/*.ts"],
  "exclude": ["node_modules", "dist", "src"]
}
